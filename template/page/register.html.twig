{% extends "base.html.twig" %}

{% block title %}Registrieren{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}

    <div class="container mt-5 mb-5">

        {% for message in messages %}

            {% include 'element/message.html.twig' with message %}

        {% endfor %}

        <div class="row">

            <div class="col-4"></div>

            <div class="col-4">

                <form method="post">
                    <div class="mb-3">
                        <label for="registerEmail" class="form-label">E-Mail Adresse</label>
                        <input type="email" class="form-control" id="registerEmail" name="registerEmail">
                    </div>
                    <div class="mb-3">
                        <label for="registerUsername" class="form-label">Username</label>
                        <input type="text" class="form-control" id="registerUsername" name="registerUsername">
                    </div>
                    <div class="mb-3">
                        <label for="registerPassword" class="form-label">Passwort</label>
                        <input type="password" class="form-control" id="registerPassword" name="registerPassword">
                    </div>

                    <hr>
                    <small class="text-muted">Mit der Registrierung stimmst du den Spielregeln sowie der Datenschutzerkl√§rung zu</small>
                    <hr>

                    <button type="submit" class="btn btn-primary">Konto erstellen</button>
                </form>

            </div>

            <div class="col-4"></div>

        </div>

    </div>

{% endblock %}